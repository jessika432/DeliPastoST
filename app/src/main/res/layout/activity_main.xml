<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/imagen3"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/user"
        android:layout_width="368dp"
        android:layout_height="682dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:autofillHints=""
        android:background="#BFC89090"
        android:hint="@string/stringresource"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:autofillHints=""
        android:background="#CBBD8080"
        android:hint="@string/ContraseÃ±a"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="372dp"
        android:layout_height="500dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:background="#CB03A9F4"
        android:text="@string/entrar"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnRegistrarse"
        android:layout_width="372dp"
        android:layout_height="492dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:background="#A1CDDC39"
        android:text="@string/registrarse"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold" />


</LinearLayout>